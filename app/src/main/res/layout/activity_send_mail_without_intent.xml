<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ccccff"
    android:id="@+id/MainActivity">

    <TextView
        android:id="@+id/txtMyCart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="26dp"
        android:textColor="#000066"
        android:text="@string/fa_list_alt" />

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/txtWelcome"
        android:text="My Shopping List"
        android:textSize="26dp"
        android:layout_marginLeft="40dp"
        android:layout_height="fill_parent" />


    <TextView
        android:id="@+id/txtAdProduct"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:textSize="22dp"
        android:textColor="#000066"
        android:text="@string/fa_shopping_cart" />

    <TextView
        android:id="@+id/txtAddProduct"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="45dp"
        android:textSize="22dp"
        android:text="Add" />

    <TextView
        android:id="@+id/send"
        android:layout_width="fill_parent"
        android:layout_marginLeft="200dp"
        android:layout_height="fill_parent"
        android:textSize="22dp"
        android:layout_marginTop="50dp"
        android:textColor="#000066"
        android:text="@string/fa_envelope" />

    <TextView
        android:id="@+id/txtMail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="230dp"
        android:textSize="22dp"
        android:text="Mail" />

    <ExpandableListView
        android:id="@+id/expandableList"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:divider="#A4C739"
        android:dividerHeight="0.5dp" />

</RelativeLayout>

